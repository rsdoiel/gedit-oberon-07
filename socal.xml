<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="socal" _name="socal" version="1.0">
  <author>R. S. Doiel</author>
  <description>Robert's color preferences</description>

  <color name="white"                       value="#FFFFFF"/>
  <color name="silver"                      value="#C0C0C0"/>
  <color name="grey"                        value="#808080"/>
  <color name="black"                       value="#000000"/>
  <color name="red"                         value="#FF0000"/>
  <color name="maroon"                      value="#800000"/>
  <color name="yellow"                      value="#FFFF00"/>
  <color name="olive"                       value="#808000"/>
  <color name="lime"                        value="#00FF00"/>
  <color name="green"                       value="#008000"/>
  <color name="aqua"                        value="#00FFFF"/>
  <color name="teal"                        value="#008080"/>
  <color name="blue"                        value="#0000FF"/>
  <color name="navy"                        value="#000080"/>
  <color name="fuchsia"                     value="#FF00FF"/>
  <color name="purple"                      value="#800080"/>

  <color name="dark-blue"                   value="#000080"/>
  <color name="dark-red"                    value="#800000"/>
  <color name="dark-green"                  value="#008000"/>

  <style name="current-line"                background="aqua"/>
  <style name="right-margin"                background="olive"/>
  <style name="bracket-match"               background="dark-blue" bold="true"/>
  <style name="bracket-mismatch"            background="red" bold="true"/>

  <!-- Search Matching -->
  <style name="search-match"                background="yellow"/>

  <!-- Bookmarks -->
  <style name="bookmark"                    background="dark-blue"/>

  <!-- legacy styles for old lang files -->
  <style name="Others"                      foreground="dark-red"/>
  <style name="Others 2"                    bold="true"/>
  <style name="Others 3"                    foreground="dark-green"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="purple"/>
  <style name="def:shebang"                 foreground="grey" bold="true"/>
  <style name="def:doc-comment"             foreground="blue"/>
  <style name="def:doc-comment-element"     bold="true"/>

  <!-- Constants -->
  <style name="def:constant"                />
  <style name="def:decimal"                 />
  <style name="def:base-n-integer"          />
  <style name="def:floating-point"          />
  <style name="def:complex"                 use-style="def:base-n-integer"/>
  <style name="def:character"               />
  <style name="def:string"                  />
  <style name="def:special-char"            />

  <!-- Identifiers -->
  <style name="def:identifier"              italic="true"/>
  <style name="def:function"                use-style="def:identifier"/>

  <!-- Statements -->
  <style name="def:statement"               bold="true" italic="false"/>

  <!-- Types -->
  <style name="def:type"                    foreground="maroon"/>

  <!-- Others -->
  <style name="def:preprocessor"            bold="true"/>
  <style name="def:note"                    foreground="white" background="blue" bold="true" italic="false"/>
  <style name="def:error"                   foreground="red" underline="true"/>
  <style name="def:underlined"              underline="true"/>
</style-scheme>
